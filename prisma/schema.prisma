generator client {
  provider = "prisma-client"
  output   = "../prisma/generated"
}

datasource db {
  provider = "postgresql"
}

model Freelance {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String
  salt      String
  skills    String[]
  tjm       Int
  // relations
  projects  Project[]
  // timestamp(s)
  createdAt DateTime  @default(now())
}

model Enterprise {
  id        Int       @id @default(autoincrement())
  name      String
  salt      String
  sector    String
  // relations
  projects  Project[]
  // timestamp(s)
  createdAt DateTime  @default(now())
}

model Project {
  id             Int        @id @default(autoincrement())
  description    String
  maxTjm         Int
  requiredSkills String[]
  title          String
  // relations
  enterpriseId   Int
  enterprise     Enterprise @relation(fields: [enterpriseId], references: [id])
  freelanceId    Int?
  freelance      Freelance? @relation(fields: [freelanceId], references: [id])
  // timestamp(s)
  createdAt      DateTime   @default(now())
}
