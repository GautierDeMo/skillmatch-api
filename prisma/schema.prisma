generator client {
  provider = "prisma-client"
  output   = "../prisma/generated"
}

datasource db {
  provider = "postgresql"
}

model Freelance {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  skills   String[]
  tjm      Int
  // relations
  projects Project[]
}

model Enterprise {
  id       Int       @id @default(autoincrement())
  name     String
  sector   String
  // relations
  projects Project[]
}

model Project {
  id             Int        @id @default(autoincrement())
  title          String
  description    String
  requiredSkills String[]
  maxTjm         Int
  // relations
  enterpriseId   Int
  enterprise     Enterprise @relation(fields: [enterpriseId], references: [id])

  freelanceId    Int?       
  freelance      Freelance? @relation(fields: [freelanceId], references: [id])
}
